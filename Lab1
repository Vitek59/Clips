(deftemplate Симптомы
  (slot ухудшение-самочувствие (type SYMBOL))
  (slot температура-тела (type SYMBOL))
  (slot интоксикация (type SYMBOL))
  (slot насморк-заложенность-носа (type SYMBOL))
  (slot чихание (type SYMBOL))
  (slot боль-в-горле-покраснение (type SYMBOL))
  (slot головная-боль (type SYMBOL))
  (slot утомляемость (type SYMBOL))
  (slot бессонница (type SYMBOL))
  (slot боль-в-мышцах (type SYMBOL))
  (slot сухость-в-горле (type SYMBOL))
  (slot слабость (type SYMBOL))
  (slot кашель (type SYMBOL))
  (slot затрудненное-дыхание (type SYMBOL))
  (slot боль-в-груди (type SYMBOL))
)

;; Правила для гриппа
(defrule Rule1-Грипп
  (Симптомы (ухудшение-самочувствие да)
             (насморк-заложенность-носа да))
  =>
  (printout t "Может быть насморк при гриппе" crlf)
)

(defrule Rule2-Грипп
  (Симптомы (ухудшение-самочувствие да)
             (температура-тела 37-38 да))
  =>
  (printout t "Может быть повышение температуры при гриппе" crlf)
)

(defrule Rule3-Грипп
  (Симптомы (боль-в-горле-покраснение да))
  =>
  (printout t "Может быть боль в горле при гриппе" crlf)
)

(defrule Rule4-Грипп
  (Симптомы (интоксикация да)
             (головная-боль да))
  =>
  (printout t "Может быть интоксикация и головная боль при гриппе" crlf)
)

(defrule Rule5-Грипп
  (Симптомы (температура-тела 39-40 да)
             (бессонница да))
  =>
  (printout t "Может быть высокая температура и бессонница при гриппе" crlf)
)

(defrule Rule6-Грипп
  (Симптомы (боль-в-горле-покраснение да)
             (головная-боль да)
             (утомляемость да))
  =>
  (printout t "Может быть боль в горле, головная боль и утомляемость при гриппе" crlf)
)

(defrule Rule7-Грипп
  (Симптомы (боль-в-горле-покраснение да)
             (интоксикация да)
             (ухудшение-самочувствие внезапное да))
  =>
  (printout t "Может быть боль в горле, интоксикация и внезапное ухудшение самочувствия при гриппе" crlf)
)

(defrule Rule8-Грипп
  (Симптомы (температура-тела 38-39 да)
             (боль-в-горле-покраснение да)
             (головная-боль да))
  =>
  (printout t "Может быть повышенная температура, боль в горле и головная боль при гриппе" crlf)
)

(defrule Rule9-Грипп
  (Симптомы (температура-тела 38-39 да)
             (головная-боль да)
             (бессонница да))
  =>
  (printout t "Может быть повышенная температура, головная боль и бессонница при гриппе" crlf)
)

(defrule Rule10-Грипп
  (Симптомы (интоксикация да)
             (головная-боль да)
             (бессонница да))
  =>
  (printout t "Может быть интоксикация, головная боль и бессонница при гриппе" crlf)
)

(defrule Rule11-Грипп
  (Симптомы (температура-тела 38-39 да)
             (утомляемость да)
             (боль-в-горле-покраснение да))
  =>
  (printout t "Может быть повышенная температура, утомляемость и боль в горле при гриппе" crlf)
)

(defrule Rule12-Грипп
  (Симптомы (насморк-заложенность-носа да)
             (головная-боль да)
             (утомляемость да))
  =>
  (printout t "Может быть насморк, головная боль и утомляемость при гриппе" crlf)
)

(defrule Rule13-Грипп
  (Симптомы (боль-в-горле-покраснение да)
             (интоксикация да)
             (бессонница да))
  =>
  (printout t "Может быть боль в горле, интоксикация и бессонница при гриппе" crlf)
)

(defrule Rule14-Грипп
  (Симптомы (ухудшение-самочувствие внезапное да)
             (насморк-заложенность-носа да)
             (бессонница да))
  =>
  (printout t "Может быть внезапное ухудшение самочувствия, насморк и бессонница при гриппе" crlf)
)

(defrule Rule15-Грипп
  (Симптомы (головная-боль да)
             (бессонница да)
             (утомляемость да))
  =>
  (printout t "Может быть головная боль, бессонница и утомляемость при гриппе" crlf)
)

